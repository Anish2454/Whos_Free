<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/friendsCardView"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inbox_horizontal_margin"
            android:layout_marginRight="@dimen/inbox_horizontal_margin"
            android:layout_marginTop="@dimen/inbox_vertical_margin"
            android:layout_marginBottom="@dimen/inbox_vertical_margin"
            android:background="@android:color/white">

                <ImageView
                    android:id="@+id/inboxProfilePic"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5sp"
                    app:srcCompat="@drawable/avatar_empty" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/message_vertical_padding"
                    android:text="Test Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/freeOrNotTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/message_vertical_padding"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="TextView"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/freeLabel"
                    android:layout_alignParentStart="true" />

                <RadioButton
                    android:id="@+id/freeLabel"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_below="@+id/usernameTextView"
                    android:layout_toEndOf="@+id/freeOrNotTextView" />

        </RelativeLayout>
</android.support.v7.widget.CardView>